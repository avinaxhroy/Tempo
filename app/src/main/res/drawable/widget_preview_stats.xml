<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="135"
                android:startColor="#202826"
                android:endColor="#1C1B1F" />
            <corners android:radius="28dp" />
        </shape>
    </item>
    
    <!-- Time text simulation -->
    <item
        android:top="20dp"
        android:left="20dp"
        android:right="100dp"
        android:bottom="40dp">
        <shape android:shape="rectangle">
            <solid android:color="#6680DAB0" />
            <corners android:radius="6dp" />
        </shape>
    </item>
    
    <!-- Label text simulation -->
    <item
        android:top="50dp"
        android:left="20dp"
        android:right="150dp"
        android:bottom="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#33FFFFFF" />
            <corners android:radius="4dp" />
        </shape>
    </item>
</layer-list>
